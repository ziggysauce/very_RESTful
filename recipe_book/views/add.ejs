<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">Add Recipe</div>
  <form class="ui form" action="/recipes" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="recipe[title]" placeholder="title">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="recipe[image]" placeholder="image">
    </div>
    <div class="field">
      <label>Ingredients</label>
      <textarea name="recipe[ingredients]"></textarea>
    </div>
    <div class="field">
      <label>Instructions</label>  
      <textarea name="recipe[instructions]"></textarea>
    </div>
    <input class="ui violet big basic button" type="submit">
  </form>
</div>

<% include ./partials/footer %>